<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="vertical">
        <TextView
            android:id="@+id/circle1_delete_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            style="@style/my_page_address_font12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="之前买的的chili丢了,又买了一个,chili真的是不调皮,显白提气色,抹上一点也不夸张,怪不得活了好几年,是人手一只的口红.跟专柜买的的做了对比,是真货!相信维度!"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/circle1_delete_simple"
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_140"

                />
            <View
                android:layout_width="@dimen/dp_5"
                android:layout_height="match_parent"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/circle1_delete_simple2"
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_140"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/circle1_delete_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/my_page_address_font10"
                android:text="2018-11-13 13:25"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/circle1_delete_zan"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/common_btn_prise_n_hdpi"
                    />
                <TextView
                    android:id="@+id/circle1_delete_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"

                    android:text="123"
                   style="@style/my_page_address_font12"/>
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_20"/>

    </LinearLayout>
</LinearLayout>
