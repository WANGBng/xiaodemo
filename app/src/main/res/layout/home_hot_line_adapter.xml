<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_160"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@drawable/eight"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/rxxp_simple"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_99"
            android:layout_gravity="center"
            fresco:roundedCornerRadius="@dimen/dp_8" />
        <TextView
            android:id="@+id/rxxp_te_title"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            style="@style/my_page_address_font12"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/rxxp_te_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            android:textColor="#ff0000"
            android:layout_gravity="center"
            />
    </LinearLayout>
</LinearLayout>
