<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loge_rec_bag"
    tools:context="com.bwie.my.activity.login_register.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_145"
        android:src="@mipmap/login_icon_phone_n_hdpi" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_210"
        android:src="@mipmap/login_icon_verification_code_n_hdpi"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_285"
        android:src="@mipmap/login_icon_lock_n_hdpi" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_285"
        android:src="@mipmap/login_icon_eye_n_hdhpi" />

    <View
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_189"
        android:background="#fff" />

    <View
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_250"
        android:background="#fff" />

    <View
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_320"
        android:background="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_210"
        android:text="获取验证码"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/te_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_39"
        android:layout_marginTop="@dimen/dp_330"
        android:text="已有账户? 立即登录"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14" />

    <EditText
        android:maxLength="11"
        android:singleLine="true"
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_140"
        android:background="@null"
        android:hint="手机号"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="@dimen/sp_20" />

    <EditText
        android:maxLength="6"
        android:singleLine="true"
        android:id="@+id/register_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_200"
        android:background="@null"
        android:hint="验证码"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="@dimen/sp_20" />

    <EditText
        android:maxLength="16"
        android:singleLine="true"
        android:id="@+id/register_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_270"
        android:background="@null"
        android:hint="密码"
        android:password="true"
        android:paddingLeft="@dimen/dp_30"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="@dimen/sp_20" />

    <Button
        android:id="@+id/bt_register"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/button_select"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:textColor="#FFFFAEB7"
        android:textSize="@dimen/sp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册" />

</RelativeLayout>
